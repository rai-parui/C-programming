#include <stdio.h>

int main()
{ 
    int num ;
    
    printf("\nEnter the array length: ");
    scanf("%d",&num);
    int arr[num];
    printf("\nEnter the %d elements: ",num);
    for(int i=0;i<num;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    for (int i = 1; i < num; i++) 
    {
        int key = arr[i];
        int j = i - 1;

        
        while (j >= 0 && arr[j] < key) 
        {
            arr[j + 1] = arr[j];
            j = j - 1;
        }

        
        arr[j + 1] = key;
    }
    
    printf("\nSorted array in descending order: ");
    for(int i=0;i<num;i++)
    {
        printf("%d ",arr[i]);
    }
    return 0;
}
