#include <stdio.h>

int main()
{
    int num;
   long long fact=1;
   printf("\nEnter a positive integer: ");
   scanf("%d",&num);
   if(num>0)
   {
    for(int i=1;i<=num;i++)
     {
       fact=i*fact;
     }
     printf("\nThe factorial of %d is: %lld",num,fact);
   }
   else
   {
     printf("\nThe factorial DOES NOT EXIST for negative numbers.");  
   }
    return 0;
}
