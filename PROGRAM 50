#include <stdio.h>

int main() 
{
    int n1, n2;


    
    printf("\nEnter the size of the first sorted array: ");
    scanf("%d", &n1);

   int arr1[n1];
    
    printf("\nEnter the elements of the first sorted array:\n");
    for (int i = 0; i < n1; i++) 
    {
        scanf("%d", &arr1[i]);
    }

        printf("\nEnter the size of the second sorted array: ");
    scanf("%d", &n2);

    int arr2[n2];

    
    printf("\nEnter the elements of the second sorted array:\n");
    for (int i = 0; i < n2; i++) 
    {
        
        scanf("%d", &arr2[i]);
    }

    
    int n3 = n1 + n2;
    int mergedArr[n3];
   

    
    int i = 0;
    int j = 0;
    int k = 0;
    while (i < n1 && j < n2) 
    {
        if (arr1[i] < arr2[j]) 
        {
            mergedArr[k++] = arr1[i++];
        } 
        else 
        {
            mergedArr[k++] = arr2[j++];
        }
    }

    
    while (i < n1) 
    {
        mergedArr[k++] = arr1[i++];
    }

    
    while (j < n2) {
        mergedArr[k++] = arr2[j++];
    }

   
    printf("\nThe merged sorted array is:\n");
    for (int idx = 0; idx < n3; idx++) 
    {
        printf("%d ", mergedArr[idx]);
    }
    printf("\n");

    

    return 0;
}
