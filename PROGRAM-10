#include <stdio.h>

int main()
{
     int principal;
    float years,rate,interest;
    printf("\nEnter the principal: ");
    scanf("%d",&principal);
    printf("\nEnter the rate: ");
    scanf(" %f",&rate);
    printf("\nEnter the time period in years: ");
    scanf(" %f",&years);
    interest=(principal*rate*years)/100;
    printf("\nThe simple interest is: %.2f",interest);
    

    return 0;
}
