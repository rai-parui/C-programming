#include <stdio.h>

int main()
{ int num;

    printf("\nEnter the array length: ");
    scanf(" %d",&num);
    printf("\nEnter %d elements: \n",num);
    int arr[num];
    for(int i=0;i<num;i++)
    {
        scanf(" %d",&arr[i]);
    }
    
    for (int i = 0; i < num- 1; i++) 
    {
        int min_idx = i;
        for (int j = i + 1; j < num; j++) 
        {
            if (arr[j] < arr[min_idx]) 
            {
                min_idx = j;
            }
        }

        
        int temp = arr[min_idx];
        arr[min_idx] = arr[i];
        arr[i] = temp;
    }
    
    printf("\nSorted array: ");
    for(int k=0;k<num;k++)
    {
        printf("%d ",arr[k]);
    }

    return 0;
}
