#include <stdio.h>

int main()
{float x1,y1,x2,y2,slope;
    printf("\nEnter the coordinates of the first point(x1,y1):");
    scanf("%f %f",&x1,&y1);
    printf("\n Enter the coordinates of the 2nd point(x2,y2):");
    scanf("%f %f",&x2,&y2);
    slope=(y2-y1)/(x2-x1);
    printf("\nThe slope is: %.2f ",slope);

    return 0;
}
